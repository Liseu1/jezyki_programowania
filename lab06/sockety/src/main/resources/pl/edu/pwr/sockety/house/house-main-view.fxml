<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="250.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.pwr.sockety.house.HouseMainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="statusLabel" text="Inicjalizacja...">
        <font> <Font name="System Bold" size="18.0" /> </font>
    </Label>

    <VBox alignment="CENTER" spacing="5.0">
        <Label text="Poziom Szamba:" />
        <ProgressBar fx:id="capacityBar" prefWidth="300.0" progress="0.0" />
        <Label fx:id="volumeLabel" text="0 / 0 L" />
    </VBox>
</VBox>